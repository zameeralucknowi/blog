<div class="author">
    <h1 class="author__heading">Welcome to Blog web</h1>
    <p class="author__body">create your first post.Let's get started..</p>
</div>

<img src="/img/hero-img.jpg" alt="person looking through window" class="hero-image" width="550">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(post => { %>

            <li>
                <a href="/post/<%= post._id  %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>

            <% }) %>



    </ul>

    <% if (nextPage!== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination"> &lt; View Older Posts  </a>
        <% } %>



</section>